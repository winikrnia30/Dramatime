<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/contactUsLL"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:paddingTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textSize="35sp"
            android:fontFamily="@font/lemonmilk_medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactUsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Praktikum Pemrograman Bergerak"
            android:textColor="@color/secondary"
            android:fontFamily="@font/lemonmilk_medium"
            android:textSize="15sp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk_light"
            android:text="Wini Kurnia / 22076055"
            android:textColor="@color/secondary"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>