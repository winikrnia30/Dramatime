<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/homeBgImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_bg2"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/search_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:adjustViewBounds="true"
            android:maxWidth="22dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:fontFamily="@font/lemonmilk_regular"
            android:hint="Cari drakor.."
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/homeBgImageView"
        android:layout_alignStart="@+id/homeBgImageView"
        android:paddingStart="25dp"
        android:paddingEnd="0dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/bannerTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Drakor Populer"
            android:textColor="#fff"
            android:textSize="26sp"
            android:fontFamily="@font/lemonmilk_bold"/>

        <TextView
            android:id="@+id/bannerText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sumber: wolipop.detik.com"
            android:textColor="#fff"
            android:textSize="12sp"
            android:fontFamily="@font/lemonmilk_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/homeBgImageView"
        android:paddingStart="0dp"
        android:paddingEnd="25dp"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_roll"
            android:adjustViewBounds="true"
            />

    </LinearLayout>

</RelativeLayout>